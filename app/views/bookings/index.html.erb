<div class="container">
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
  <span><strong>Yay!</strong> ðŸŽ‰ Your booking request is successfully sent!</span>
  <a data-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
  <h1>My bookings</h1>
  <% @bookings.each do |booking| %>
    <div class="notification">
      <p><%= booking.status %></p>
       <% if booking.instrument.photo.file %>
          <%= cl_image_tag booking.instrument.photo, size: "200x200" %>
          <% else %>
          <%= image_tag 'record-player.png',size: "200x200" %>
          <% end %>

      <div class="notification-content">
        <p><small><%= booking.instrument.name %></small></p>
        <p><%= booking.instrument.description %></p>
      </div>
      <div class="notification-date">
        <p>Dates:</p>
        <p><%= booking.start_date %></p>
        <p><%= booking.end_date %></p>
      </div>
    </div>
  <% end %>
</div>
