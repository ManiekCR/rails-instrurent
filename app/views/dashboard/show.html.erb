<div class="dashboard-container">
  <div class="booking-container">
    <h2>Upcoming requests</h2>
    <div class="booking-container">
      <div class="filter">

      </div>
      <div class="container">
        <% @bookings.each do |booking| %>
        <div class="row">
          <div class="col-3">
            <div class="row-card">

            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="instrument-container">
    <h2>My instruments</h2>
    <div class="user-dashboard-cards">
      <% @instruments.each do |instrument| %>
        <div class="card">
          <img src="https://images.unsplash.com/photo-1525725296312-37c06d2338ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="guitar picture">
          <div class="card-info">
            <div class="card-description">
              <h3><%= instrument.name %></h3>
              <p><%= instrument.description %></p>
            </div>
            <div class="card-price">
              <p><%= instrument.price %> â‚¬</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<ul>
<% @instruments.each do |instrument| %>

<li><%= link_to instrument.name %>
  <%= link_to 'Delete', instruments_path(instrument), data: {confirm: 'Are you sure?'}, method: :delete %>
<%= link_to 'Edit', edit_instrument_path(instrument) %>
</li>
<% end %>
</ul>
<%= link_to "List an instrument", new_instrument_path %>

