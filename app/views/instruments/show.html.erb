<div class="container">
  <div class="navigation">
     <div class="col-xs-12 col-md-12" style="margin: 6px 0 0 3px">
        <a class="nav-text" href="/instruments">Back to search results</a>
  </div>
  </div>
  <div class="col-xs-12 col-md-6">
    <div class="card-container">
      <img src="https://images.unsplash.com/photo-1525725296312-37c06d2338ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="guitar picture">
        <div class="card-information">
          <p><strong> <%= @instrument.name %> </strong> </p>
          <p> <%= @instrument.address %> </p>
          <p> <%= @instrument.price  %>€</p>
        </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-6">
    <div class="book-form">
      <h5> <%= @instrument.description %> </h5>
      <%= simple_form_for [@instrument, @booking] do |f| %>
      <p><strong>Checkin</strong></p>
      <%= f.input :start_date %>
      <p><strong>Checkout</strong></p>
      <%= f.input :end_date %>
     <%= f.button :submit, 'Book Now!' %>
      <% end%>
   </div>
  </div>
</div>



