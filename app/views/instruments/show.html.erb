
<div class="show-header">
  <div class="back-to">
    <a class="" href="/instruments">Back to search results</a>
  </div>
    <div class="heading"></div>
      <h2><%= @instrument.name %></h2>
    <div class="row">
</div>
<div class="show-container">
  <div class="show-card">
    <% if @instrument.photo %>
      <div class="show-image">
        <%= cl_image_tag(@instrument.photo) %>
      </div>
    <% else %>
      <div class="no-photo"></div>
    <% end %>
    <div class="show-card-info">
      <p>This <%= @instrument.category %> is located at <%= @instrument.address %></p>
      <p>It costs <%= @instrument.price  %>â‚¬/day to rent</p>
      <p><%= @instrument.description %></p>

      </div>
  </div>

  <% if @instrument.user == current_user %>
  <div class="user-action-box">
    <div class="user-actions">
      <p>You listed this instrument on <%= @instrument.created_at %></p>
      <p>If you would like to modify your listing, click on one of the links below</p>
     <div class="crud-links">
      <%= link_to "Edit",edit_instrument_path(@instrument) %>
       <%= link_to "Delete", instrument_path(@instrument), method: :delete, data: {confirm: "Are you sure?"} %>

       </div>
    </div>
  </div>
</div>

  <% else %>
    <div class="book-form">
      <%= simple_form_for [@instrument, @booking] do |f| %>
      <p><strong>Start Date</strong></p>
      <%= f.input :start_date %>
      <p><strong>End Date</strong></p>
      <%= f.input :end_date %>
      <input type="submit" name="commit" value="Book Now!" class="button-orange" data-disable-with="Book Now!" />
      <% end%>
      <% end %>
   </div>
  </div>
</div>

